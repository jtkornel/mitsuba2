<scene version="2.0.0">

    <!-- <include filename="fragments/base.xml"/> -->
    <!-- ########################################## -->
    <!-- ########################################## -->
    <!-- ########################################## -->
    <default name="spp" value="256"/>
    <default name="res" value="256"/> <!-- Unused -->
    <default name="max_depth" value="12"/>
    <default name="flen" value="43.4" />
    <default name="fov" value="60" />
    <default name="aperture" value="12.7" />

    <!-- <integrator type="direct"/> -->
    <integrator type="path">
        <integer name="max_depth" value="$max_depth"/>
    </integrator>

	<sensor type="startlens" id="Camera-camera">
        <!-- <string name="fov_axis" value="smaller"/> -->
        <!-- <float name="focal_length" value="37.5"/> -->
        <float name="fov" value="$fov"/>
        <!-- <string name="fov_axis" value="smaller"/> -->
        <float name="focus_distance" value="$flen"/>

        <!-- This must be equal to the h limit 'limit' setting below -->
        <float name="aperture_radius" value="$aperture"/>

		<transform name="to_world">
            <!-- origin=location of aperture/focus point -->
            <!-- target="camera pixel location before focus dist adjust -->
            <lookat origin="278, 273, -10800.0"
                    target="278, 273, -10799.0"
                    up    ="  0,   1,    0"/>
		</transform>

		<sampler type="independent">
			<integer name="sample_count" value="$spp"/>
		</sampler>

		<film type="hdrfilm" id="film">
			<integer name="width" value="$res"/>
			<integer name="height" value="$res"/>
			<string name="pixel_format" value="rgb"/>
			<rfilter type="gaussian"/>
		</film>

        <!-- Radius must match the first lens below -->
        <float name="radius0" value="172"/>
        <float name="kappa0" value="0"/>

	</sensor>

    <shape type="asphsurf">
        <point name="center" x="278" y="273" z="-10800.46950704447"/>

        <float name="limit" value="12.7"/>

        <float name="radius0" value="172"/>
        <float name="kappa0" value="0.0" />

        <boolean name="flip" value="false" />

        <bsdf type="dielectric">
                <float name="int_ior" value="1.51679"/>
                <float name="ext_ior" value="1.0" />
                <float name="specular_reflectance" value="0.0" />
        </bsdf>
    </shape>

    <shape type="cylhollow">
        <point name="center" x="278" y="273" z="-10800.0"/>

        <float name="length" value="3.21592557544385"/>
        <float name="radius" value="12.7"/>
        <float name="thickness" value="1.0" />
    </shape>

   <shape type="asphsurf">
        <point name="center" x="278" y="273" z="-10796.784074424556"/>
        <!-- 
        <point name="center" x="278" y="273" z="-795"/>
        -->

        <float name="limit" value="12.7"/>

        <float name="radius0" value="30.05999975952"/>
        <float name="kappa0" value="0.0" />

        <boolean name="flip" value="true" />

        <bsdf type="dielectric">
                <float name="int_ior" value="1.51679"/>
                <float name="ext_ior" value="1.0"/>
        </bsdf>
    </shape>

